	<properties>
		<jetty.port>9988</jetty.port>
		<selenium.version>2.39.0</selenium.version>
		<slf4j.version>1.6.4</slf4j.version>
		<vaadin.version>6.8.14</vaadin.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

		<dependencies.directory>dependencies</dependencies.directory>

		<dependencies.file1.basename>org.eclipse.core.databinding</dependencies.file1.basename>
		<dependencies.file1.version>1.4.1.v20120521-2329</dependencies.file1.version>

